@model Curso.DataAccess.Models.Compras

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Alta de Compra</h1>

<h4>Compras</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NroCompra" class="control-label"></label>
                <input asp-for="NroCompra" class="form-control" />
                <span asp-validation-for="NroCompra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PuntoDeVenta" class="control-label"></label>
                <input asp-for="PuntoDeVenta" class="form-control" />
                <span asp-validation-for="PuntoDeVenta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdCompraDetalle" class="control-label"></label>
                <select asp-for="IdCompraDetalle" class ="form-control" asp-items="ViewBag.IdCompraDetalle"></select>
            </div>
            <div class="form-group">
                <label asp-for="Idformapago" class="control-label"></label>
                <select asp-for="Idformapago" class ="form-control" asp-items="ViewBag.Idformapago"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
